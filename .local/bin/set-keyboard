#!/bin/sh

# xset r off
# disable key repeat

xset r rate 240 32
# key repeat delay: 240ms
# key repeat rate: 32ms

xmodmap -e "keycode 191 = F13"
xmodmap -e "keycode 192 = F14"
xmodmap -e "keycode 193 = F15"
xmodmap -e "keycode 194 = F16"
xmodmap -e "keycode 195 = F17"
xmodmap -e "keycode 196 = F18"
xmodmap -e "keycode 197 = F19"
xmodmap -e "keycode 198 = F20"
xmodmap -e "keycode 199 = F21"
xmodmap -e "keycode 200 = F22"
xmodmap -e "keycode 201 = F23"
xmodmap -e "keycode 202 = F24"
# http://xahlee.info/linux/linux_xmodmap_f13_f14_f15.html
