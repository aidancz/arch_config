#!/bin/sh

# a dmenu wrapper script for system functions.
# WARNING: can't be used in shell spawned by `setsid`

export WM="dwm"

case "$(readlink -f /sbin/init)" in
	*systemd*)
		ctl='systemctl'
		;;
	*)
		ctl='loginctl'
		;;
esac

wmpid(){
	tree="$(pstree -ps $$)"
	# $$ is the process id of the current shell
	tree="${tree#*$WM(}"
	printf "%s" "${tree%%)*}"
	# ${name#pattern}
	# ${name##pattern}
	# ${name%pattern}
	# ${name%%pattern}
	# see `man zshexpn`
}
# this function is needed if there are multiple instances of the window manager.

if [ -n "$1" ]; then

i="$1"

else

menu="\
screen off
window-manager renew
window-manager leave
system suspend
system hibernate
system reboot
system poweroff
"
i="$(printf "%s" "$menu" | dmenu -l 64 -i -p 'system action')"

fi

case "$i" in
	"screen off")
		sleep 0.2; xset dpms force off
		# https://wiki.archlinux.org/title/Display_Power_Management_Signaling#Runtime_settings
		slock
		;;
	"window-manager renew")
		kill -HUP "$(wmpid)"
		;;
	"window-manager leave")
		kill -TERM "$(wmpid)"
		;;
	"system suspend")
		slock $ctl suspend -i
		;;
	"system hibernate")
		slock $ctl hibernate -i
		;;
	"system reboot")
		$ctl reboot -i
		;;
	"system poweroff")
		$ctl poweroff -i
		;;
	*)
		exit 1
		;;
esac
